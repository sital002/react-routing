{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "module": "esnext",
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib"
  },

  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
